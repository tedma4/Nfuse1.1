<style>
  .hub_padding{
    margin: 15px 0 0 0;
  }
</style>
<% if current_user.followed_users.empty? %>
  <div class="loader">
    <div class="loader-img"></div>
  </div>
  <div class="center hub_padding">
    <p> Can't display posts because you aren't following anyone... </p>
    <p> <%= current_user.first_name %>, Why aren't you following someone yet? </p>
    <%= link_to image_tag("sadface.fw.png", size:"100x100"), explore_user_path(current_user) %>
    <%= link_to 'Start Exploring', explore_user_path(current_user), class: "btn btn-link-2" %>
  </div>
<% else %>
  <div class="loader">
    <div class="loader-img"></div>
  </div>
  <div id="masonJar" class="hub_container clearfix masonJar hub_padding">
    <% timeline.first(30).each do |post| %>
      <% case post.provider %>
      <% when "nfuse" %>
        <!-- LEAVE OFF UNTIL PAGINATION WRITTEN FOR SHOUTS. -->
        <%=  render partial: 'users/shout', locals: {shout: post} %>
      <% when "gplus" %>
        <% if post.type != 'hiddenType' %>
          <%= render partial: "users/post", locals: {post: post} %>
        <% end %>
      <% when "tumblr" %>
        <% unless post.type == 'chat' || post.type == 'audio' %>
          <%= render partial: "users/post", locals: {post: post} %>
        <% end %>
      <% when "facebook" %>
        <% unless post.story.present? && ((post.story.include? 'profile picture') || (post.story.include? 'cover photo')) %>
          <%= render partial: "users/post", locals: {post: post} %>
        <% end %>
      <% else %>
        <%= render partial: "users/post", locals: {post: post} %>
      <% end %>
    <% end %>
  </div>
<% end %>