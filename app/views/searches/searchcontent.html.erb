<!-- MASON JAR -->
<% if signed_in? %>
  <!-- Do something else when logged in now -->
  <%#= render partial: "searches/show"%>
<% end %>
<% case params[:selected_option] %>
<% when "Nfusers" %>
  <section id="profile-grid" class="container-fluid">
    <% @users.each do |user| %>
      <!-- PROFILE -->
      <div class="individual_profile col-xs-6 col-sm-4 col-md-3 col-lg-2">
        <a href="/users/<%= user.user_name %>/feed">
          <div class="profile-head">
            <p><%= user.user_name %></p>
          </div>
          <div>
          <% if user.avatar_file_name.present? && user.avatar_file_name.include?('graph.facebook.com') %>
            <%= image_tag user.avatar_file_name %>
          <% else %>
            <%= image_tag user.avatar.url(:large) %> 
          <% end %>
          </div>
        </a>
      </div>
    <% end %>
  </section>
<% when "Pages" %>
  <section id="profile-grid" class="container-fluid">
    <% @pages.each do |page| %>
      <!-- PROFILE -->
      <div class="individual_profile col-xs-6 col-sm-4 col-md-3 col-lg-2">
        <a href="/pages/<%= page.page_name %>">
          <div class="profile-head">
            <p><%= page.full_name %></p>
          </div>
          <%= image_tag(page.profile_pic) %>
        </a>
      </div>
    <% end %>
  </section>
<% when "Posts", "", nil %>
  <% unless @timeline.nil? %>
    <section id="masonJar" class="clearfix">
      <div class="grid-sizer"></div>
      <div class="gutter-sizer"></div>
      <% @timeline.each do |post| %>
        <%= render partial: "searches/post", locals: {post: post} %>
      <% end %>
      <% if !signed_in? %>
        <div class="item individual_post center">
          <%= link_to 'Sign up now', signup_path, class: "btn btn-link-2" %>
        </div>
      <% end %>
    </section>
  <% else %>
    <div class="center no_timeline_padding">
      <p> Sorry, We couldn't find anything like that </p>
      <p> Try searching again </p>
      <%= link_to image_tag("sadface.fw.png", size:"100x100"), root_path %>
    </div>
  <% end %>
<% end %>

<script>
$(document).ready(function() {
  $('body.nosearchbar').removeClass('nosearchbar').addClass('searchbar')
});
</script>