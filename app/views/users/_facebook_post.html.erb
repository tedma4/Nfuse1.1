<div class="individual_post facebook_post item " data-id="<%= post.id %>" id="content-box-feed">
  <div class="post_main">
    <ul class="post_header">
      <li>
        <%= link_to image_tag(post.avatar, :class=> 'user_profile_picture'), feed_user_path(post.user) %>
      </li>
      <li class="user_name">
        <%= link_to "#{post.username}", feed_user_path(post.user) %>
      </li>
      <li class="right">
        <%= link_to image_tag("facebookblue.fw.png", 
                              size: "24x24,"
                              :class => "provider_logo"), 
                              post.link_to_post, 
                              target: "_blank" %>
      </li>
    </ul>
  </div>
  <div class="post_content">
    <ul>
      <% if post.story %>
        <li><%= post.story %></li>
      <% end %>
      <% if post.image %>
        <li><%= image_tag(post.image) %></li>
      <% end %>
      <% if post.caption_text && post.status_type != "shared_story" %>
        <li><%= post.caption_text %></li>
      <% end %>
      <% if post.article_link && post.type == "link" %>
        <li><%= link_to "View the Link", post.article_link, :target => "_blank" %></li>
      <% end %>
    </ul>
    <% if post.story_tags %>
      <ul class="story_tags">
        <% post.story_tags.each do |story_tag| %>
          <% if story_tag.type == "user" %>
            <li><%= link_to story_tag.name, story_tag.link_to_profile, :target => "_blank" %></li>
          <% else %>
            <li><%= story_tag.name %></li>
          <% end %>
        <% end %>
        <% if post.story_tags.length > 1 %>
          <li>were tagged in this post.</li>
        <% else %>
          <li>was tagged in this post.</li>
        <% end %>
      </ul>
    <% end %>
  </div><br>

  <ul class="post_footer_li">
    <li class="tilt"><%= link_to image_tag("smilinggray.fw.png", size: "24x24"), like_shout_path(id: post.id, owner_id: post.user.id, key: :facebook), method: :post, remote: true %>

      <div id="shout-<%=post.id%>">
        <%= post.like_score(post.id) %>
      </div>
    </li>
    <li class="vr"></li>
    <li class="tilt">
      <a data-toggle="modal" data-target="#facebook_modal_<%= post.id %>">
        <%= image_tag("commentgray.fw.png", size: "24x24") %>
      </a>
    </li>
    <li class="vr"></li>
    <li class="tilt">
            <%= link_to image_tag("favouritedarkgray.fw.png", size: "24x24"),
                                 user_nfused_page_path(id: post.id,
                                                 owner_id: post.user.id,
                                                 user_id:  current_user.id, key: :facebook, url: ( post.image || '') ),
                                                 method: :post, remote: true %>
    </li>

    <li class="vr"></li>
      <% unless !current_user?(post.user) %>
        <li class="tilt"><%= image_tag("delete3gray.fw.png", size: "24x24") %></li>
      <% else %>
        <li class="tilt"><%= image_tag("share1gray.fw.png", size: "24x24") %></li>
      <% end %>
    <li class="right"><%= time_ago_in_words(post.created_time, :class => "time-ago") %> ago</li>
  </ul>
</div>
  <div id="facebook_modal_<%= post.id %>" class="modal fade">
    <div class="modal-fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button class="close" data-dismiss="modal">Ã—</button>
            <h3>Comment on <%= post.user.user_name %>'s post</h3>
          </div>    
            <div class="modal-body">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="span6">
                          <div class="logowrapper">
                            <div class="post_content">

                            </div><br>
                          </div>
                        </div>
                        <div class="span6">
                          <div class="comment_overflow">
                            <div class="post_comments" id="comment_list_<%= post.id %>">
                              <ul class="comment">
                                <% Comment.where(commentable_type: post.class.to_s, commentable_id: post.id).each do |comment| %>
                                  <%= render partial: 'shared/comment', locals: {comment: comment } %>
                                <% end %>
                              </ul><br>                            
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
          <div class="modal-footer">
            <div>
              <%= render partial: 'shared/comment_form', locals: { shout: Commented.new(post) } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

