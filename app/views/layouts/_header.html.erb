<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <ul class="nav pull-left">
        <li><%= link_to root_path do %>
          <%= image_tag('logo.fw.png', size: "130x33") %>
          <% end %>
        </li>
      </ul>
    </div>
    <div class="navbar-collapse collapse">
      <% if signed_in? %>
        <ul class="navbar-left">
          <li>
            <%= form_tag search_path, method: "get", class: "search-bar" do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search FooDoo" %>
            <% end %>
          </li>
        </ul>
        <ul class="nav pull-right navbar-right navbar-nav">
          <li>        
            <%= link_to root_path do %>
            <%= image_tag('home1.fw.png', size: "32x32") %>
            <% end %>
          </li>
          <li> 
            <%= link_to feed_user_path(session[:user_id]) do %>
            <%= image_tag('profile.fw.png', size: "32x32") %>
            <% end %>
          </li>
          <li>  
            <%= link_to feed_user_path(session[:user_id]) do %>
            <%= image_tag('add50.fw.png', size: "32x32") %>
            <% end %>
          </li> 
          <li> 
            <%= link_to users_path do %>
            <%= image_tag('chat56.fw.png', size: "32x32") %>
            <% end %>
          </li>
          <li id="fat-menu" class="dropdown nav-icons">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag('menu24.fw.png', size: "32x32") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(:user_id) %></li>
              <li><%= link_to "Help", help_path %></li>
              <li><%= link_to "Feedback", contacts_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        </ul> 
   
   
<% else %> 
  
     <!-- <form class="navbar-form navbar-right" role="form"> Functionality without the form tag, style with the form tag. wtf-->
        <div class="form-group navbar-form navbar-right">    
          <%= form_for(:session, url: sessions_path, html: { class: "navbar-form navbar-right" }) do |f| %>
            <div class="form-group home-login">
              <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
            </div>
            <div class="form-group home-login">
              <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
          <%= f.submit "Log in", class: "btn btn-info" %>
          <% end %>
        </div> 


<% end %>
    </div>
  </div>
</nav> 
