<% content_for :for_head do %>
  <title>Nfuse | The Easiest Soical Media Site In The World</title>
  <meta name="description" content="We brought together all the places that you have friends and made sharing as simple as it should be.">
<% end %>
    <!-- Intro Header -->
    <header id="landing" class="fill vcenter intro">
        <div class="vcell">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1 col-md-12 col-md-offset-0">
                        <h1 class="brand-heading heavy">Share & Discover</h1>
                        <p class="intro-text">We brought together all the places that you have friends and made sharing as simple as it should be.</p>
                        <%= form_tag search_path, method: 'get', id: "home-search", class: "search" do %>
                          <a class="ilink randomize loggedout" href="/random_search"><img src="/assets/dice.png" alt="random search"/></a>
                          <!-- <a class="gosearch" type="submit"><i class="fa fa-search"></i></a> -->
                          <a class="ilink gosearch"><button type="submit"><i class=" fa fa-search"></i></button></a>
                          <%= hidden_field_tag "selected_option" %>
                          <%= text_field_tag :search, params[:search], class: "searchform", placeholder: "#tags, @Users & Social Media" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <a id="top-tag" class="corner-tag"><span class="light main-color">#</span></a>
        <a href="#mission" class="connector page-scroll animated">
            <span>What is Nfuse?</span>
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
        </a>
        <div class="random bg"></div>
    </header>

    <!-- Mission Section -->
    <section id="mission" class="fill vcenter">
        <div class="vcell">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                        <h2 class="heavy main-color">Our Mission</h2>
                        <p>Our mission is to bring people and technology together in the easiest way possible. Nfuse is a brand new start up, so feel free to send us any questions or let us know if you'd like to join the team.</p>
                        <a href="#steps" class="hidden-xs btn btn-lg btn-default page-scroll animated">Sign Up</a>
                        <a href="#" class="visible-xs btn btn-lg btn-default signuptoggler animated">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
        <a href="#about" class="connector page-scroll">
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
            <i class="fa fa-circle animated"></i>
        </a>
    </section>

