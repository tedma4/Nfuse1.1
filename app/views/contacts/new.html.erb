<% content_for :for_head do %>
  <title>Nfuse | Contact Our Team at Nfuse HQ and Discover Media</title>
  <meta name="description" content="Contact Nfuse for anything you need help with. Explore the top trending post on www.Nfuse.it">
<% end %>
<section id="" class="content-section container picbg">
  <div class="row">
    <header class="col-xs-12 center">
      <h1 class="heavy">Contact Nfuse</h1>
      <p class="intro-text">Message us for anything you need help with.</p>
    </header>
    <!-- LOGIN FORM -->
    <%= form_for @contact, html: {class: 'minimal col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6'} do |f| %>
      <div class="form-group">
        <div style='display:none;'>
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <input class="form-control input-lg" id="form-first-name" name="contact[full_name]" placeholder="First Name" type="search">
        <input class="form-control input-lg" id="form-email" name="contact[email]" placeholder="Email" type="email">
        <textarea class="form-control input-lg" id="form-message" name="contact[message]" placeholder="Message"></textarea>
      </div>
      <button type="submit" class="btn btn-default animated">Send!</button>
    <% end %>
  </div>
  <% unless signed_in? %>
    <a id="bottom-tag" class="corner-tag"><span class="light main-color">#</span></a>
    <div class="random bg"></div>
  <% end %>
</section>
  <!-- Footer -->
  <footer>
      <div class="container text-center">
          <p>&copy; Nfuse LLC. 2016. Made with <a href="#"><i class="fa fa-heart-o"></i> by Taylor and Ted</a></p>
      </div>
  </footer>
