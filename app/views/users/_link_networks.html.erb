<!-- *Start* Views/users/_link_networks.html -->
<div class="network_links_container">
  <% if @display_welcome %>
    <p class="centered_text link_accounts_paragraph">Click one of the below links or visit Settings to Nfuse an account and get started.</p>
  <% end %>
  <div class="network_container">
    <div class="network_login">
      <%= link_to image_tag("Twitter-Icon.png", size: "100x100"), "/auth/twitter?origin=#{request.original_url}", :class => "network_login_link" %>
      <% if current_user && user_has_provider?('twitter') %>
        <%= link_to "reNfuse Twitter", "/auth/twitter?origin=#{request.original_url}" %>
      <% else %>
        <%= link_to "Nfuse Twitter", "/auth/twitter?origin=#{request.original_url}" %>
