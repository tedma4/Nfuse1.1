<style>

/*  setting tab */
div.setting-tab-container{
  z-index: 4;
  background-color: #ffffff;
  padding: 0 !important;
  border-radius: 4px;
  -moz-border-radius: 4px;
  border:1px solid #ddd;
  margin-top: 20px;
  margin-left: 50px;
  -webkit-box-shadow: 0 6px 12px #87ceeb;
  box-shadow: 0 6px 12px #87ceeb;
  -moz-box-shadow: 0 6px 12px #87ceeb;
  background-clip: padding-box;
  opacity: 0.97;
  filter: alpha(opacity=97);
}
div.setting-tab-menu{
  padding-right: 0;
  padding-left: 0;
  padding-bottom: 0;
}
div.setting-tab-menu div.list-group{
  margin-bottom: 0;
}
div.setting-tab-menu div.list-group>a{
  margin-bottom: 0;
}
div.setting-tab-menu div.list-group>a .glyphicon,
div.setting-tab-menu div.list-group>a .fa {
  color: #87ceeb;
}
div.setting-tab-menu div.list-group>a:first-child{
  border-top-right-radius: 0;
  -moz-border-top-right-radius: 0;
}
div.setting-tab-menu div.list-group>a:last-child{
  border-bottom-right-radius: 0;
  -moz-border-bottom-right-radius: 0;
}
div.setting-tab-menu div.list-group>a.active,
div.setting-tab-menu div.list-group>a.active .glyphicon,
div.setting-tab-menu div.list-group>a.active .fa{
  background-color: #87ceeb;
  background-image: #87ceeb;
  color: #ffffff;
}
div.setting-tab-menu div.list-group>a.active:after{
  content: '';
  position: absolute;
  left: 100%;
  top: 50%;
  margin-top: -13px;
  border-left: 0;
  border-bottom: 13px solid transparent;
  border-top: 13px solid transparent;
  border-left: 10px solid #87ceeb;
}

div.setting-tab-content{
  background-color: #ffffff;
  /* border: 1px solid #eeeeee; */
  padding-left: 20px;
  padding-top: 10px;
}

div.setting-tab div.setting-tab-content:not(.active){
  display: none;
}

  .pro-pics-padding {
    margin-top: 8vh;
}

.fileUpload {
    position: relative;
    overflow: hidden;
    margin: 10px;
}
.fileUpload input.upload {
    position: absolute;
    top: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
}

</style>

