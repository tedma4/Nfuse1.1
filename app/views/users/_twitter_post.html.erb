<!-- *Start* Views/users/_twitter_post.html -->
<div class="individual_post item twitter_post" data-id="<%= post.tweet_id %>" width="275" height="auto">
  <div class="post_main">
    <ul class="post_header">
      <li>
        <%= link_to image_tag(post.avatar, :class=> 'user_profile_picture'), feed_user_path(post.user) %>
      </li>
      <li class="user_name"><%= link_to "#{post.username}", feed_user_path(post.user) %></li>
    </ul>
  </div>

  <div class="post_content">
    <% if post.tweet_image.present? %>
      <%= image_tag(post.tweet_image, :class => "image_post") %>
    <% end %>
      <%= post.tweet_text %> 
  </div><br>

  <div class="right">
    <%= link_to image_tag("Twitter_logo_blue.png", :class => "provider_logo", size: "20x20"), post.link_to_tweet, :target => "_blank" %> 
    <p class="timeStamp"><%= time_ago_in_words(post.created_time) %> ago</p>
  </div>

  <div class="<%= post.class %>-<%= post.tweet_id %> post_footer">
  </div>

  <ul class="post_actions">
    <li class="tilt"><%= link_to image_tag("smiling42.png", size: "24x24"), 
      like_shout_path(id: post.tweet_id,
                owner_id: post.user.id,
                key: :twitter),
                method: :post, remote: true %> 
      <%= post.like_score(post.tweet_id) %>
    </li>
    <li class="vr"></li>
    <li class="tilt"><%= image_tag("double7.png", size: "24x24") %>4</li>
    <li class="vr"></li>
    <li class="tilt"><%= link_to image_tag("testbeaker.fw.png", size: "24x24"),
                                 user_nfused_page_path(id: post.tweet_id,
                                                 owner_id: post.user.id,
                                                 user_id:  current_user.id, key: :twitter, url: ( post.tweet_image || '') ),
                                                 method: :post, remote: true %>
    </li>

    <li class="vr"></li>
      <% unless !current_user?(post.user) %>
        <li class="tilt"><%= image_tag("delete3.fw.png", size: "24x24") %></li>
      <% else %>
        <li class="tilt"><%= image_tag("share1.fw.png", size: "24x24") %></li>
      <% end %>
  </ul>
</div>
<!-- *End* Views/users/_twitter_post.html -->