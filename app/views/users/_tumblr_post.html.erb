                                  </div>
                              <% else %>
                                <div class="center">
                                  <%= post.caption_text %>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        </div>
                        <div class="span6">
                          <div class="comment_overflow">
                            <div class="post_comments" id="comment_list_<%= post.id %>">
                              <ul class="comment">
                                <% Comment.where(commentable_type: post.class.to_s, commentable_id: post.id).each do |comment| %>
                                  <%= render partial: 'shared/comment', locals: {comment: comment } %>
                                <% end %>
                              </ul><br>                            
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
          <div class="modal-footer">
            <div>
              <%= render partial: 'shared/comment_form', locals: { shout: Commented.new(post) } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

