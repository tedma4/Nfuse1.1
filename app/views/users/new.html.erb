<% provide(:title, 'Sign up') %>

<div class="containertotalSignup">
  <div class="containerSignup">
    <%= form_for(@user) do |f| %>
    <div class="error_messages">
      <ul>
        <%= render 'shared/error_messages', object: f.object %>
      </ul>
    </div>
    <h1 class="center">Sign up</h1>
    <table class="signupTable">
    <tr>
      <td><%= f.label :first_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.label :last_name %></td>
      <td><%= f.text_field :last_name %></td>
    </tr>
    <tr>
      <td><%= f.label :user_name %></td>
      <td><%= f.text_field :user_name %></td>
    </tr>
    <tr>
      <td><%= f.label :phone_number %></td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "Password Confirmation" %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td><%= f.label :intro, "Code" %></td>
      <td><%= f.password_field :intro %></td>
    </tr>
    </table>
        <%= f.submit "Create my account", class: "signupBtn center" %>
    <% end %>
  </div>
</div>
<!-- *End* Views/users/new.html.erb  -->