<!-- *START* Views/users/_user.html.erb  -->

<li class="list-group-item">
  <div class="col-xs-12 col-sm-3">
		<%= image_tag user.avatar.url(:followp), class: "img-responsive img-circle" %>
	</div>
	<div class="col-xs-12 col-sm-9">
    <span class="name"><%= user.full_name	%></span><br/>
    <h2>
   	<span class="atUserName">@<%= link_to user.user_name, feed_user_path(user)%></span>
 		</h2><br>
    <span class="text-muted c-info">Followers:<%= user.followers.count %></span>
    <span class="text-muted c-info">Following:<%= user.followed_users.count %></span>
    <span class="text-muted c-info">Likes:<%= user.total_likes %></span>
	</div>
	<div class="clearfix"></div>
</li>



<!-- *END* Views/users/_user.html.erb  -->