<div class="timeline-user-box">
  <iframe
    id="ytplayer"
    type="text/html"
    width="100%"
    height="225"
    src="https://www.youtube.com/embed/<%= post.video %>"
    frameborder="0"
    allowfullscreen>
  </iframe>
</div>
<p>
  <% if post.text.present? %>
    <%= post.text %>
  <% end %>
</p>