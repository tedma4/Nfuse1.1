$("a#post_<%=@commentable.id%>_comment_count").text("<%=@comments.count%>");
$("div#comment_list_<%= @commentable.id %>").html(' \
        <ul class="chat">' +
          <% Comment.where(commentable_type: @commentable.type, commentable_id: @commentable.id).each do |comment| %>
            '<%= escape_javascript(render partial: 'shared/comment', locals: {comment: comment }) %>' +
          <% end %>
        '</ul>'
);
