<% provide(:title, "Step 3") %>


<div class="container">
  <div class="containerMain">
    <h1>Last step</h1>
    <%= form_for(@user, :multipart => true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <h2>Upload a Profile Picture</h2>

        <%= f.file_field :avatar %>
        <%= image_tag @user.avatar(:medium) %> <br>
        <h2>Upload a Profile Banner</h2>
      
        <%= f.file_field :banner %>
        <%= image_tag @user.banner(:large) %> <br>
              
       <%= f.submit "Save changes", class: "btn btn-large btn-info" %>
        <% end %>
      <%= link_to "skip this step", next_wizard_path %>
    </div>
  </div>
<!-- *End* Views/callback_links/avatar_pic.html -->