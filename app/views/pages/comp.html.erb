<!-- MASON JAR -->
<% if signed_in? %>
  <!-- Do something else when logged in now -->
  <%#= render partial: "searches/show"%>
<% end %>
<% if @timeline.present? %>
  <section id="masonJar" class="clearfix masonJar yes_timeline_padding">
    <div class="grid-sizer"></div>
    <div class="gutter-sizer"></div>
    <% @timeline.first(50).each do |post| %>
      <%= render partial: "pages/post", locals: {post: post} %>
    <% end %>
    <% if !signed_in? %>
      <div class="item">
        <%= link_to 'Sign up now', signup_path, class: "btn btn-link-2" %>
      </div>
    <% end %>
  </section>
<% else %>
  <div class="center no_timeline_padding">
    <p> Sorry, We couldn't find anything like that </p>
    <p> Try searching again </p>
    <%= link_to image_tag("sadface.fw.png", size:"100x100"), root_path %>
  </div>
<% end %>

<a id="backtotop" title="back to top" class="page-scroll animation" href="#nfuse" ><i class="fa fa-long-arrow-up"></i></a>