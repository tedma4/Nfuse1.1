<div class="timeline-user-box">
  <iframe
    id="ytplayer"
    type="text/html"
    width="100%"
    height="225"
    src="https://www.youtube.com/embed/<%= @post_entry.video %>"
    frameborder="0"
    allowfullscreen>
  </iframe>
</div>
<% if @post_entry.text.present? %>
  <div class='center'>
    <%= @post_entry.text %>
  </div>
<% end %>