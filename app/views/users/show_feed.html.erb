<!-- Start of regular page Show_feed-->
<% provide(:title, @title) %>
<div class="container_profile">
  
    
      <div><%= image_tag @user.banner(:large), class: "banner" %> </div>
      <div class="main-avatar"><%= image_tag @user.avatar(:larger), class: "avatar-picture-main", id: "profile-picture"%> </div>

       <h1 class="inLineLeft"><%= @user.full_name%></h1>


        <div>
          <ul class="inLineRight">
            <li></li>
            <li><%= render 'follow_form' if signed_in? %></li>
            <li><% unless !current_user?(@user) %> 
                  <%= link_to "Edit", edit_user_path(session[:user_id]), class: "btn btn-medium"  %> 
                  <% else %>
                  <%= link_to "#", class: "start-conversation", "data-sid" => current_user.id, "data-rip" => @user.id do %>
                    <%= image_tag('chat56.fw.png', size: "30x30") %>
                    <% end %>
                <% end %> 
            </li>
          </ul>
        </div>
   
      <%= render 'shared/stats' %>
    
  
  <div class="center block">
   
      <%= render file: "users/feed" %>
  </div>
</div>
      <script type="text/javascript">
        FeedIndex.providers = {facebook: <%= @providers.facebook? %>, twitter: <%= @providers.twitter? %>};
        $(document).ready(function () {
          FeedIndex.initialize();
        });
      </script>
<!-- *End* Views/users/show_feed.html.erb  -->