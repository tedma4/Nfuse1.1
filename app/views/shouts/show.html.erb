<div class="visible-md visible-lg">
<% if @post.photo? %>
		<div class="center"><p>
      	<%= image_tag @post.photo.url, :style => 'width:100%; height: 500px;'%> </p> 
    	</div>
		<div style="padding-left: 5%; padding-right: 5%;">
			<h1 class="center" style="font-size:500%; color: white; z-index:2; margin-top: -200px;">  
		  	<%= @post.title %>
			</h1><br /><br /><br /><br /><br />
			<div class="form-signin-show">
				<p>
			  <%=raw @post.content.html_safe.gsub(/\r\n?/,"<br/>").html_safe %>
				</p>
			</div>
			<div class="center">
			<% if admin_signed_in? %>
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>
			<% else %>
			<%= link_to 'Back', pages_news_path %>
			<% end %>
			</div>
		</div>
<% elsif @post.video? %>
		<h1 class="center">
		  <%= @post.title %>
		</h1>
		<video align="center" preload controls style="margin-left: 20%; margin-right: 20%; width:60%; height:400px;">
			<source src="<%= @post.video.url(:original) %>" type="video/ogg">
				Your browser does not support the video tag.
		</video>
		</div>  
    	<div style="padding-left: 5%; padding-right: 5%;">
			<div class="form-signin-show">
				<p>
			  	<%=raw @post.content.html_safe.gsub(/\r\n?/,"<br/>").html_safe %>
				</p>
			</div>
			<div class="center">
				<% if admin_signed_in? %>
				<%= link_to 'Edit', edit_post_path(@post) %> |
				<%= link_to 'Back', posts_path %>
				<% else %>
				<%= link_to 'Back', pages_news_path %>
				<% end %>
			</div>
		</div>
<% else %>		
		<div style="padding-left: 5%; padding-right: 5%;">
			<h1 class="center">
		  	<%= @post.title %>
			</h1>
			<div class="form-signin-show">
				<p>
			  	<%=raw @post.content.html_safe.gsub(/\r\n?/,"<br/>").html_safe %>
				</p>
			</div>
			<div class="center">
			<% if admin_signed_in? %>
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>
			<% else %>
			<%= link_to 'Back', pages_news_path %>
			<% end %>
			</div>
		</div>
<% end %> 
</div>

