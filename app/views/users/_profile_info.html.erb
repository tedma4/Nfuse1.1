<div><%= image_tag @user.banner.url(:larger), class: "banner" %> </div>
  <div class="main-avatar"><%= image_tag @user.avatar(:larger), class: "avatar-picture-main", id: "profile-picture"%> </div>
    <div class="profile_bar"><div class="inLineLeft"><h1><%= @user.full_name%><br> <span class="atUserName">@<%= link_to @user.user_name, feed_user_path(@user)%></span></h1>
    </div>
    <div class="inLineRight">
      <%= render 'follow_form' if signed_in? %>
      <% unless !current_user?(@user) %>
        <%= link_to edit_user_path(session[:user_id]) do %>
          <%= image_tag('settings48.png', size: "32x32", class: "tilt edit_profile_link") %>
        <% end %>
      <% else %>
        <%= link_to "#", class: "start-conversation", "data-sid" => current_user.id, "data-rip" => @user.id do %>
          <%= image_tag('chat56.fw.png', size: "30x30") %>
        <% end %>
      <% end %> 
    </div>
  <%= render 'shared/stats' %>
</div>