<!-- *Start* Views/users/_shout.html -->
<div class="visible-md visible-lg individual_post nFuse_post mosaicflow__item" data-id="<%= shout.id %>" data-provider="<%= shout.provider %>">
  <p id="notice"><%= notice %></p>
  <div class="timeline-user-box">
    <%= image_tag shout.user.avatar.url(:thumb), class: 'user' %>
    <%= link_to shout.user.full_name, shout.user %>
    <%= image_tag "beaker.fw.png", size: "50x50" %>
  </div>
  <p class="timeline-user-box">
    <%= image_tag shout.pic.url if shout.pic.exists? %>
  </p>
  <div class="<%= shout.class %>-<%= shout.id %>">
    <%= link_to "Like", like_shout_path(shout.id), method: :put, remote: true %><%= shout.like_score %> | 
    <%= link_to "Dislike", dislike_shout_path(shout.id), method: :put, remote: true  %><%= shout.dislike_score %>
    <%= pluralize shout.comments_count, "comment" %>
  </div>
  <div class="post_comments">
    <ul>
      <% shout.comments.each do |comment| %>
        <li><%= image_tag comment.user.avatar(:thumb) %>
          <%= comment.user.full_name %>
          <%= comment.body %></li>
      <% end %>
    </ul>
  </div>
  <%= form_for shout.new_comment do |f| %>
    <% if @comment.errors.any? %>
      <div class="error_messages">
        <h2>Please correct the following errors.</h2>
        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
