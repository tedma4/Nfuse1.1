<% case post.type %>
<% when 'photo' %>
  <div class="timeline-user-box">
    <%= image_tag(post.image, class: 'facebook_image') %>
  </div>
    <div class="center">
      <% if post.name.present? %>
        <%= post.name %>
      <%elsif post.message.present? %>
        <%= post.message %>
      <%end%>
    </div>
<% when 'link' %>
  <% if post.image.present? %>
    <div class="timeline-user-box">
      <%= image_tag(post.image, class: 'facebook_image') %>
    </div>
  <%end%>
    <div class="center">
      <% if post.description.present? %>
          <%= post.description %>
      <%end%>
    </div>
    <div class="center">
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
<% when 'video' %>
  <div class="center">
    <% if post.text == 'youtube.com' || post.source.include?('youtube') %>
      <iframe
      id="ytplayer"
      width="100%"
      autoplay=0
      src="<%= post.youtube_source %>"
      frameborder="0"
      allowfullscreen>
      </iframe>
    <div class="center">
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
    <%else%>
      <video controls apreload="none" poster=<%= post.image %> >
        <source src="<%= post.source %>" type='video/mp4' />
        <source src="<%= post.source %>" type='video/ogv' />
      </video>
    <div class="center">
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
    <%end%>
  </div>
<% when 'status' %>
  <div class="center text_only_post">
    <% if post.message.present? %>
        <%= post.message%>
    <%end%>
  </div>
<% end %>
