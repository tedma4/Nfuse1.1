<% if post.has_media? %>
  <% if post.type == 'video' %>
    <video src="<%= post.tweet_video %>" width="100%" controls="true" type="video/mp4"></video>
  <% elsif post.type == 'photo' %>
    <div class="timeline-user-box">
      <%= image_tag(post.tweet_image, :class => "twitter_image") %>
    </div>
  <% end %>
<% end %>
  <%= post.tweet_text %><br>
