<!-- START CONTENT -->
<section id="" class="content-section container picbg">
  <div class="row">
    <header class="col-xs-12 center">
      <h1 class="heavy">Sign Up</h1>
      <p class="intro-text">Nfuse is free as long as the infinite exists.</p>
    </header>
    <!-- Signup Form -->
    <form id="signup" class="new_user col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6" accept-charset="UTF-8" action="/users" method="post">
      <div class="error_messages">
        <div class="form-group">
          <input class="form-control input-lg" id="form-first-name" name="user[first_name]" placeholder="First Name" type="search">
          <input class="form-control input-lg" id="form-last-name" name="user[last_name]" placeholder="Last Name" type="search">
          <input class="form-control input-lg" id="form-user-name" name="user[user_name]" placeholder="User Name" type="search">
          <input class="form-control input-lg" id="form-email" name="user[email]" placeholder="Email" type="email">
          <input class="form-control input-lg" id="form-password" name="user[password]" placeholder="Password" type="password">
          <input class="form-control input-lg" id="inputPassword" name="user[password_confirmation]" placeholder="Password Confirmation" type="password">
        </div>
        <button type="submit" class="btn btn-default animated">Go!</button>
        <a href="#" class="facebooklogin btn btn-lg btn-default animated"><i class="fa fa-facebook"></i>Log in</a>
      </div>
    </form>
  </div>
  <a id="bottom-tag" class="corner-tag"><span class="light main-color">#</span></a>
  <div class="random bg"></div>
</section>
<!-- Footer -->
<footer>
  <div class="container text-center">
   <p>&copy; Nfuse LLC. 2015. Made with <a href="#"><i class="fa fa-heart-o"></i> by Fyresite.com</a></p>
  </div>
</footer>