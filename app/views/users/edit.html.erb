<% provide(:title, "Edit user") %>
<style>

/*  setting tab */
div.setting-tab-container{
  z-index: 4;
  background-color: #ffffff;
  padding: 0 !important;
  border-radius: 4px;
  -moz-border-radius: 4px;
  border:1px solid #ddd;
  margin-top: 20px;
  margin-left: 50px;
  -webkit-box-shadow: 0 6px 12px #87ceeb;
  box-shadow: 0 6px 12px #87ceeb;
  -moz-box-shadow: 0 6px 12px #87ceeb;
  background-clip: padding-box;
  opacity: 0.97;
  filter: alpha(opacity=97);
}
div.setting-tab-menu{
  padding-right: 0;
  padding-left: 0;
  padding-bottom: 0;
}
div.setting-tab-menu div.list-group{
  margin-bottom: 0;
}
div.setting-tab-menu div.list-group>a{
  margin-bottom: 0;
}
div.setting-tab-menu div.list-group>a .glyphicon,
div.setting-tab-menu div.list-group>a .fa {
  color: #87ceeb;
}
div.setting-tab-menu div.list-group>a:first-child{
  border-top-right-radius: 0;
  -moz-border-top-right-radius: 0;
}
div.setting-tab-menu div.list-group>a:last-child{
  border-bottom-right-radius: 0;
  -moz-border-bottom-right-radius: 0;
}
div.setting-tab-menu div.list-group>a.active,
div.setting-tab-menu div.list-group>a.active .glyphicon,
div.setting-tab-menu div.list-group>a.active .fa{
  background-color: #87ceeb;
  background-image: #87ceeb;
  color: #ffffff;
}
div.setting-tab-menu div.list-group>a.active:after{
  content: '';
  position: absolute;
  left: 100%;
  top: 50%;
  margin-top: -13px;
  border-left: 0;
  border-bottom: 13px solid transparent;
  border-top: 13px solid transparent;
  border-left: 10px solid #87ceeb;
}

div.setting-tab-content{
  background-color: #ffffff;
  /* border: 1px solid #eeeeee; */
  padding-left: 20px;
  padding-top: 10px;
}

div.setting-tab div.setting-tab-content:not(.active){
  display: none;
}

  .pro-pics-padding {
    margin-top: 8vh;
}

.fileUpload {
    position: relative;
    overflow: hidden;
    margin: 10px;
}
.fileUpload input.upload {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    margin: 0;
    padding: 0;
    font-size: 20px;
    cursor: pointer;
    opacity: 0;
    filter: alpha(opacity=0);
}

</style>

<div class="container">
  <div class="row">
    <div class="col-lg-14 col-md-12 col-md-offset-1 col-sm-8 col-xs-9 setting-tab-container">
      <div class="col-lg-1 col-md-3 col-sm-3 col-xs-3 setting-tab-menu">
        <div class="list-group">
          <a href="#" class="list-group-item active text-center">
            <%= image_tag("nfuseblue.fw.png", size: "60x60") %><br>Networks
          </a>
          <a href="#" class="list-group-item text-center">
            <%= image_tag("pencilblue.fw.png", size: "60x60") %><br>Account Info
          </a>
          <a href="#" class="list-group-item text-center">
            <%= image_tag("createprofileblue.fw.png", size: "60x60") %><br>Profile Images
          </a>
        </div>
      </div>
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 setting-tab">
        <div class="setting-tab-content active">
          <div class="Alignthisorelse sup-padding">
            <div class="container">
              <div class="row">
                <div class="col-sm-10  form-box wow fadeInUp">
                  <div class="form-top">
                    <div class="form-top-left">
                      <h2>Network Nfusion.</h2>
                        <p>Add more networks to share with everyone.</p>
                    </div>
                    <div class="form-top-right">
                      <a href="#"><%= image_tag("Nfuselogogray.fw.png", size: "65x65") %></a>
                    </div>
                  </div>
                  <div class="form-bottom-sup-nfusion">
                    <%= render partial: 'users/network_authentications' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="setting-tab-content">
          <div class="Alignthisorelse">
            <div class="container signup-padding">
              <div class="col-md-6 col-md-offset-3 form-box wow fadeInUp">
                <div class="form-top">
                  <div class="form-top-left">
                    <h3>Account Info</h3>
                    <p>Update or change your account info.</p>
                  </div>
                  <div class="form-top-right">
                    <a href="#"><%= image_tag("pencilgray.fw.png", size: "65x65") %></a>
                  </div>
                </div>
                <div class="form-bottom">
                  <%= form_for(@user, html: { role: "form"}) do |f| %>
                    <div class="error_messages">
                      <div>
                        <%= render 'shared/error_messages', object: f.object %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :first_name, :placeholder => "First Name", class: "form-control input-lg", id:"form-first-name", type: "search" %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :last_name, :placeholder => "Last Name", class: "form-control input-lg", id:"form-last-name", type: "search"  %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :user_name, :placeholder => "User Name", class: "form-control input-lg", id:"form-user-name", type: "search"  %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :email, :placeholder => "Email", class: "form-control input-lg", id:"form-email", type: "email"  %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :password, :placeholder => "Password", class: "form-control input-lg", id:"form-password", type: "password" %>
                      </div>
                      <div class="form-group">
                        <%= f.text_field :password_confirmation, :placeholder => "Password Confirmation", class: "form-control input-lg", id:"inputPassword", type: "password" %>
                      </div>
                      <button type="submit" class="btn">
                      Save
                      </button>
                      <%= link_to 'delete', destroyuser_path %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="setting-tab-content">
          <div class="Alignthisorelse">
            <div class="container">
              <div class="row">
                <div class="col-sm-6 col-sm-offset-2 form-box wow fadeInUp">
                  <div class="form-top">
                    <div class="form-top-left">
                      <h3>Choose you profile images</h3>
                        <p>Update or change your profile images.</p>
                    </div>
                    <div class="form-top-right">
                      <a href="#"><%= image_tag("createprofilegray.fw.png", size: "60x60") %></a>
                    </div>
                  </div>
                  <div class="form-bottom">
                    <div class="Alignthisorelse">
                      <%= render partial: 'users/upload_pics_form' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

