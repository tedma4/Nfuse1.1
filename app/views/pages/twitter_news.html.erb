<section id="masonJar" class="clearfix">
  <div class="grid-sizer"></div>
  <div class="gutter-sizer"></div>
  <% @posts.each do |post| %>
    <!-- POST -->
    <article class="item individual_post <%= post.provider %>_post0">
      <header class="post_header">
        <div class="user">
          <%= image_tag(post.avatar, class: 'user_profile_picture', size:'45x45', alt: 'P6pl2kfg normal') %>
          <a href="/"><%= post.user_name %></a>
        </div>
        <%= link_to post.link_to_post, class: 'timeStamp', target: 'blank', title: 'Go to entry' do %>
          <i class="fa"></i> <%= time_ago_in_words(post.created_time) %>
        <% end %>
      </header>
      <% case post.type %>
      <% when 'youtube_video' %>
        <div class="timeline-user-box">
          <iframe
          id="ytplayer"
          type="text/html"
          width="100%"
          height="225"
          src="https://www.youtube.com/embed/<%= post.twitter_url_video %>"
          frameborder="0"
          allowfullscreen>
          </iframe>
        </div>
        <div class='center'>
          <%= post.text %>
        </div>
      <% when 'animated_gif', 'video' %>
      <div class="timeline-user-box">
        <video controls autoload="none" style="background:transparent url(<%= post.image %>) no-repeat 50% 50%;" >
          <source src="<%= post.video %>" type='video/mp4' />
          <source src="<%= post.video %>" type='video/ogv' />
        </video>
      </div>
        <div class='center'>
          <%= post.text %>
        </div>
      <% when 'photo' %>
      <div class="timeline-user-box">
        <%= image_tag(post.image, :class => "image_post") %>
      </div>
        <div class='center'>
          <%= post.text %>
        </div>
      <% else %>
        <div class='center text_only_post'>
          <%= post.text %>
        </div>
      <% end %>
    </article>
  <% end %>
</section>