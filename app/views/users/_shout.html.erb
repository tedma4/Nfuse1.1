<div class="individual_post item nFuse_post " data-id="<%= shout.id %>" data-provider="<%= shout.provider %>">
  <div class="post_main">
    <ul class="post_header">
      <li>
        <%= link_to image_tag(shout.user.avatar(:thumb), :class => "user_profile_picture", size:"50x50"), feed_user_path(shout.user) %>
      </li>
      <li class="user_name"><%= link_to shout.user.user_name, feed_user_path(shout.user) %>
      </li>
    </ul>
  </div>

  <div class="post_content">
    <% if !shout.url.blank? %>
      <p> <%= shout.url_html %></p>
      <div class="url_caption">
        <%= shout.content %>
        <!-- <p>Duration: <b><%#= shout.duration %></b></p> -->
      </div>
    <% elsif shout.is_pic? %>
      <div class="timeline-user-box image_post">
        <%= image_tag shout.pic_url %>
      </div>
      <div class="caption">
          <%= shout.content %>
      </div>
    <% elsif shout.is_video? %>
      <div class="timeline-user-box">
        <video 
          id="ytplayer" 
          type="video/mp4" 
          width="100%" 
          height="225" 
          src="<%= shout.video_url %>" 
          frameborder="0"
          allowfullscreen
          controls>
        </video>
        <%#= videojs_rails sources: { mp4: "http://domain.com/path/to/video.mp4", webm: "http://another.com/path/to/video.webm"}, setup: "{}", controls: false, width:"350" %>
      </div>
      <div class="caption">
          <%= shout.content %>
      </div>
    <% elsif shout.is_full_video? %>
      <div class="timeline-user-box">
        <video 
          id="ytplayer" 
          type="video/flv" 
          width="100%" 
          height="225" 
          src="<%= shout.full_video_url %>" 
          frameborder="0"
          allowfullscreen
          controls>
        </video>
        <%#= videojs_rails sources: { mp4: "http://domain.com/path/to/video.mp4", webm: "http://another.com/path/to/video.webm"}, setup: "{}", controls: false, width:"350" %>
      </div>
      <div class="caption">
          <%= shout.content %>
      </div>
    <% end %>
  </div><br>

   <div class="right"> 
  </div>
  <ul class="post_actions">
    <li class="tilt">
      <% if ActsAsVotable::Vote.where(votable_id: shout.id).pluck(:voter_id).include?(current_user.id) %>
      <%= link_to image_tag("smilingpurple.fw.png", size: "24x24"),
                      like_shout_path(id: shout.id,
                      owner_id: shout.user.id), 
                       method: :post, remote: true %>
      <% else %>
      <%= link_to image_tag("smilinggray.fw.png", size: "24x24"),
                      like_shout_path(id: shout.id,
                      owner_id: shout.user.id), 
                       method: :post, remote: true %>
      <% end %>
      <a id="shout-<%=shout.id%>">
        <%= shout.like_score(shout.id) %>
      </a>
    </li>
<!--     <li class="vr"></li>
    <li class="tilt">
      <div id="shout-<%= shout.id %>">
      <a data-toggle="modal" data-target="#nfuse_modal_<%= shout.id %>">
        <%#= image_tag("commentgray.fw.png", size: "24x24") %>
      </a>
      <a id="post_<%=shout.id%>_comment_count">
        <%= shout.comment_count %>
      </a>
      </div>
    </li> -->
    <li class="vr"></li>
    <li class="tilt">
      <%= image_tag "nfuseblue.fw.png", 
                    class: "provider_logo", 
                      size: "24x24" %> 
      <p class="timeStamp">
        <%= time_ago_in_words(shout.created_time) %> ago 
      </p>
      <%#= link_to image_tag("favouritedarkgray.fw.png", size: "24x24"),
        user_nfused_page_path(id: shout.id,
                        owner_id: shout.user.id,
                        url:      shout_url_html(shout),
                        user_id:  available_user.id), 
                        method: :post, remote: true %>
    </li>
