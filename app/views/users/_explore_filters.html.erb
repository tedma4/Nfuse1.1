<div class="top-big-link wow fadeInUp landingbottompush center">
  <%= link_to 'Back', :back , class: "btn btn-link-2" %>
  <%= link_to 'Explore', explore_user_path(current_user), class: "btn btn-link-2" %>
    <div id="follow_form">
      <% if current_user.following?(@page) %>
        <%= form_for(current_user.relationships.find_by(followed_id: @page.id),
                                      html: { method: :delete },
                                      remote: true) do |f| %>
          <%= f.submit "Unfollow", class: "unfollowBtn" %>
        <% end %>
      <% else %>
        <%= form_for(current_user.relationships.build(followed_id: @page.id,
                                        follow_type: @page.class.name),
                                                      remote: true) do |f| %>
          <% if Page.find_by(id: @page.id, thing_name: @compname).nil? %>
            <% Page.find_by(id: @page.id).update_attributes(
                       thing_name: @compname,
               twitter_handle: @comp,
               youtube_handle: @comp_url,
               instagram_handle: @incomp) %>
          <% end %>
          <div><%= f.hidden_field :followed_id %></div>
          <%= f.submit "Follow", class: "followBtn" %>
        <% end %>
      <% end %>
    </div>

</div><br>