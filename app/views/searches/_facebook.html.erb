<% case post.type %>
<% when 'photo' %>
  <div>
    <%= image_tag(post.image) %>
  </div>
    <div>
      <% if post.name.present? %>
          <%= post.name %>
      <%elsif post.message.present? %>
          <%= post.message %>
      <%end%>
    </div>
<% when%>
  <% if post.image.present? %>
    <div>
      <%= image_tag(post.image) %>
    </div>
  <%end%>
    <div>
      <% if post.description.present? %>
          <%= post.description %>
      <%end%>
    </div>
    <div>
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
<% when 'video' %>
  <div>
    <% if post.caption == 'youtube.com' %>
      <iframe
      width="100%"
      autoplay=0
      src="<%= post.youtube_source %>"
      frameborder="0"
      allowfullscreen>
      </iframe>
    <div>
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
    <%else%>
      <video width="100%" controls>
        <source src="<%= post.source %>" type='video/mp4' />
        <source src="<%= post.source %>" type='video/ogv' />
      </video>
    <div>
      <% if post.message.present? %>
          <%= post.message%>
      <%end%>
    </div>
    <%end%>
  </div>
<% when 'status' %>
  <div>
    <% if post.message.present? %>
        <%= post.message%>
    <%end%>
  </div>
<% end %>