<!-- Start of regular page -->
<% provide(:title, @title) %>
<div class="row">
  <aside class="span4" id="content-box-profile">
    <section>
      <div><%= image_tag @user.banner(:large) %> </div>
      <div class="main-avatar"><%= image_tag @user.avatar(:larger), class: "avatar-picture-main" %> </div>

       <h1><%= @user.full_name%></h1>


        <div>
          <ul class="pull-left inline follow-btn">
            <li></li>
            <li><%= render 'follow_form' if signed_in? %></li>
            <li><% unless !current_user?(@user) %> 
                  <%= link_to "Edit", edit_user_path(session[:user_id]), class: "btn btn-medium"  %> 
                  <% else %>
                  <%= link_to "#", class: "start-conversation", "data-sid" => current_user.id, "data-rip" => @user.id do %>
                    <%= image_tag('chat56.fw.png', size: "30x30") %>
                    <% end %>
                <% end %> 
            </li>
          </ul>
        </div>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="center">
   
      <%= render file: "users/feed" %>
  </div>
</div>
      <script type="text/javascript">
        FeedIndex.providers = {facebook: <%= @providers.facebook? %>, twitter: <%= @providers.twitter? %>};
        $(document).ready(function () {
          FeedIndex.initialize();
        });
      </script>