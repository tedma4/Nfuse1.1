<% if post.type == "image" %>
    <div class="timeline-user-box">
      <%= image_tag(post.low_resolution_image_url, :class => "image_post") %>
    </div>
    <% if post.text.present? %>
    <div class="center">
      <%= post.text %>
    </div>
    <% end %>
<% elsif post.type == "video" && instagram || twitter %>
  <div class="center">
    <video width="100%" controls>
      <source src="<%= post.video %>" type='video/mp4' />
      <source src="<%= post.video %>" type='video/ogv' />
    </video>
  </div>
<% elsif post.type == "video" && youtube %>
  <iframe
    id="ytplayer"
    type="text/html"
    width="100%"
    height="225"
    src="http://www.youtube.com/embed/<%= post.video %>"
    frameborder="0"
    allowfullscreen>
  </iframe>
  <% if post.text.present? %>
    <div class="center">
      <%= post.text %>
    </div>
  <% end %>
<% else %>
  <% if post.text.present? %>
    <div class="center">
      <%= post.text %>
    </div>
  <% end %>
<% end %>

