<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <div class="main-avatar"><%= image_tag @user.avatar, size: "210x210" %> </div>
        <div>
          <ul class="pull-left inline follow-btn">
            <li><h1><%= @user.full_name %></h1></li>
            <li><%= render 'follow_form' if signed_in? %></li>
            <li><% unless !current_user?(@user) %> 
                  <%= link_to "Edit", edit_user_path(session[:user_id]), class: "btn btn-medium"  %> 
                  <%= link_to "Send Message", "#", class: "btn btn-info btn-xs start-conversation",
                    "data-sid" => current_user.id, "data-rip" => user.id %>
                <% end %> 
            </li>
          </ul>
        </div>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h1><%= @title %></h1>
      <%= render file: "users/hub" %>
  </div>
</div>