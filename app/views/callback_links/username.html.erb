<% content_for :for_head do %>
  <title>Nfuse | Facebook Sign Up User Name Change</title>
  <meta name="description" content="Create a new username for your new profle on Nfuse or keep your Facebook username.">
<% end %>
<section id="" class="content-section container picbg">
  <div class="row">
    <header class="col-xs-12 center">
      <h1 class="heavy"><%= current_user.user_name %></h1>
      <p class="intro-text">Is your new user name</p>
      <p>If you don't like it go ahead and change it below</p>
    </header>
    <!-- LOGIN FORM -->
    <%= form_for @user, html: {class: 'minimal col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6', id: 'user_name_form'} do |f| %>
      <div class="form-group">
        <div style='display:none;'>
          <%= f.text_field :user_name %>
        </div>
        <input class="form-control input-lg" id="form-first-name" name="user[user_name]" placeholder="User Name" type="search">
      </div>
      <button type="submit" class="btn btn-default animated">Next</button>
    <% end %>
  </div>
  <% unless signed_in? %>
    <a id="bottom-tag" class="corner-tag"><span class="light main-color">#</span></a>
    <div class="random bg"></div>
  <% end %>
</section>
  <!-- Footer -->
  <footer>
      <div class="container text-center">
          <p>&copy; Nfuse LLC. 2016. Made with <a href="#"><i class="fa fa-heart-o"></i> by Taylor and Ted</a></p>
      </div>
  </footer>
<script>
// $(document).ready(function() {
//   $('body.nosearchbar').removeClass('nosearchbar').addClass('searchbar')
// });
  $('#user_name_form').submit(function( event ) {
    if ($('#form-first-name').val() == '') {
      event.preventDefault();
      window.location='/callback_links/callbacks';
    } else {
      return true;
    }
  });

</script>