<div class="navSpacing"></div>
<div class="navbarBack">
<nav class="navbar" role="navigation">
  <div class="inLineLeft">
    <ul>
      <li><%= link_to root_path do %>
          <%= image_tag('logo.fw.png', size: "130x33") %>
          <% end %>
      </li>
    </ul>
  </div>

 <% if signed_in? %>

  <div class="inLineRight iconBar">
    <ul id="menu">
     <li>        
            <%= link_to hub_user_path(session[:user_id]) do %>
            <%= image_tag('home1.fw.png', size: "32x32") %>
            <% end %>
          </li>
          <li> 
            <%= link_to feed_user_path(session[:user_id]) do %>
            <%= image_tag('profile.fw.png', size: "32x32") %>
            <% end %>
          </li>
          <li>  
            <%= link_to new_shout_path do %>
            <%= image_tag('add50.fw.png', size: "32x32") %>
            <% end %>
          </li> 
          <li> 
            <%= link_to users_path(session[:user_id]) do %>
            <%= image_tag('chat56.fw.png', size: "32x32") %>
            <% end %>
          </li>
      <li>
        <a href="#" class="dropdown-toggle">
          <%= image_tag('menu24.fw.png', size: "32x32") %> <b class="caret"></b>
        </a>
        <ul class="menuDropdown">
          <li class="doubleDrop"><%= link_to "Settings", edit_user_path(:user_id) %></li>
          <li class="doubleDrop"><%= link_to "Help", help_path %></li>
          <li class="doubleDrop"><%= link_to "Feedback", contacts_path %></li>
          <li class="divider"></li>
          <li class="doubleDrop"><%= link_to "Log out", signout_path, method: "delete" %></li>
        </ul>
      </li>
    </ul> 
  
  </div>

 <% else %> <!-- -->

  <div class="inLineRight ">
    <%= form_tag "/auth/identity/callback", class: "loginForm" do %>
      <span>
        <%= text_field_tag :auth_key, params[:email], placeholder: "Email", class: "navbarInput"  %>
      </span>
      <span>
        <%= password_field_tag :password, params[:password], placeholder: "Password", class: "navbarInput" %>
      </span>
      <span>
        <div class="actions"><%= submit_tag "Login", class: "button ", id: "loginButton" %></div>
      </span>
     <% end %>
  </div>

<% end %>

</nav>
<script>
$(document).ready(function(){
  $('.menuDropdown').hide();
  //alert("header.js");
  $('.dropdown-toggle').click(function () {
    $('.menuDropdown').toggle(300);
  });
});
</script>
</div>

