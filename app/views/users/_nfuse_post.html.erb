<style>
  .url_caption {
    margin-top: -12px;
  }
  li {
    display: block;
  }

  .chat
  {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .chat li
  {
    margin-bottom: 10px;
    padding-bottom: 5px;
    border-bottom: 1px dotted #B3A9A9;
    float: none;
    /*    display: none;
    */}

  .chat li.left .chat-body
  {
    margin-left: 60px;
  }


  .chat li .chat-body p
  {
    margin: 0;
  }

  .panel-body
  {
    overflow-y: scroll;
    height: 180px;
  }

  ::-webkit-scrollbar-track
  {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    background-color: #F5F5F5;
  }

  ::-webkit-scrollbar
  {
    width: 12px;
    background-color: #F5F5F5;
  }

  ::-webkit-scrollbar-thumb
  {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
    background-color: #555;
  }


</style>

<% if !post.url.blank? %>
  <p> <%= post.url_html %></p>
  <div class="url_caption">
    <%= post.content %>
    <!-- <p>Duration: <b><%#= post.duration %></b></p> -->
  </div>
<% elsif post.is_pic? %>
  <div class="timeline-user-box image_post">
    <%= image_tag post.pic_url %>
  </div>
  <div class="caption">
    <%= post.content %>
  </div>
<% elsif post.is_video? %>
  <div class="timeline-user-box">
    <video
    id="ytplayer"
    type="video/mp4"
    width="100%"
    height="225"
    src="<%= post.video_url %>"
    frameborder="0"
    allowfullscreen
    controls>
    </video>
    <%#= videojs_rails sources: { mp4: "http://domain.com/path/to/video.mp4", webm: "http://another.com/path/to/video.webm"}, setup: "{}", controls: false, width:"350" %>
  </div>
  <div class="caption">
    <%= post.content %>
  </div>
<% elsif post.is_full_video? %>
  <div class="timeline-user-box">
    <video
    id="ytplayer"
    type="video/flv"
    width="100%"
    height="225"
    src="<%= post.full_video_url %>"
    frameborder="0"
    allowfullscreen
    controls>
    </video>
    <%#= videojs_rails sources: { mp4: "http://domain.com/path/to/video.mp4", webm: "http://another.com/path/to/video.webm"}, setup: "{}", controls: false, width:"350" %>
  </div>
  <div class="caption">
    <%= post.content %>
  </div>
<% else %>
  <div class="caption">
    <%= post.content %>
  </div>
<% end %>