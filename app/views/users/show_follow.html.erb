<!-- *START* Views/users/show_follow.html.erb  -->
<% provide(:title, @title) %>
<div class="row">
<div class="container_profile">
  <div><%= image_tag @user.banner(:larger), class: "banner" %> </div>
  <div class="main-avatar"><%= image_tag @user.avatar(:larger), class: "avatar-picture-main", id: "profile-picture"%> </div>
  <div class="profile_bar"><h1 class="inLineLeft"><%= @user.full_name%></h1>
    <ul class="inLineRight">
      <li><%= render 'follow_form' if signed_in? %></li>
      <li><% unless !current_user?(@user) %> 
        <%= link_to edit_user_path(session[:user_id]) do %>
        <%= image_tag('settings48.png', size: "32x32") %>
        <% end %>
        <!--<%# else %>
          <%#= link_to "#", class: "start-conversation", "data-sid" => current_user.id, "data-rip" => @user.id do %>
            <%#= image_tag('chat56.fw.png', size: "30x30") %>
          <%# end %>-->
        <% end %> 
      </li>
    </ul>
<%= render 'shared/stats' %>
    
  </div>
    <h1><%= @title %></h1>
        <% if @users.any? %>
          <div class="row span8 col-1-2">
                <ul class="users">
                  <%= render @users %>
                </ul>
          </div>
          <%= will_paginate %>
        <% end %>

</div>
</div>
<!-- *End* Views/users/show_follow.html.erb  -->